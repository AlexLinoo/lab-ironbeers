<!DOCTYPE html>
<html lang="en">


{{#each randomBeerInfo}}
<div class="card m-3">
    <div class="card" style="width: 50rem;">
        <img class="card-img-top" src="{{image_url}}" style="width: 10rem" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text">{{tagline}}</p>
            <h6>Food Pairing</h6>
            <ul>{{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p class="card-text">{{brewers_tips}}</p>
        </div>
    </div>
</div>
{{/each}}
</body>